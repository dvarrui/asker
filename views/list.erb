<h2>Searching files</h2>
<p>Directory: <a href="/list" accesskey="h">Home</a><%= html_for_current %> (<%= @filenames.size.to_s%>)</p>
<hr>

<% @filenames.each do |filename| %>
  <% if File.directory?(filename) %>
    <li><a href="/list/<%= route_for(filename) %>"><%= File.basename(filename) %></a></li>
  <% else %>
    <li><a href="/show/<%= route_for(filename) %>"><%= File.basename(filename) %></a></li>
  <% end %>
<% end %>
