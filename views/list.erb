<h2>Searching files</h2>

<p><a href="/ls" accesskey="h">Home</a><%= html_for_current %></p>

<% @filenames.each do |filename| %>
  <% if File.directory?(filename) %>
    <li><a href="/ls/<%= route_for(filename) %>"><%= File.basename(filename) %></a></li>
  <% else %>
    <li><a href="/cat/<%= route_for(filename) %>"><%= File.basename(filename) %></a></li>
  <% end %>
<% end %>
